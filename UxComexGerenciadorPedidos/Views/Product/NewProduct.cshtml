<form id="frmNewProduct">
    <div class="container w-50 p-0">
        <div class="h1 text-center text-white bg-danger">Create New Product</div>
    </div>
    <br />
    <div class="container border border-1 w-50 p-4">
        <div class="mb-3">

            <div class="row">
                <div class="col">
                    <label for="inputProductName" class="form-label">Product Name:</label>
                </div>
                <div class="col-sm-8">
                    <input type="text" class="form-control" placeholder="Name" aria-label="Name" id="inputProductName">
                </div>
            </div>

        </div>
        <div class="mb-3">

            <div class="row">
                <div class="col">
                    <label for="inputProductDescription" class="form-label">Description:</label>
                </div>
                <div class="col-sm-8">
                    <input type="text" class="form-control" placeholder="Description" aria-label="Description" id="inputProductDescription">
                </div>
            </div>

        </div>
        <div class="mb-3">

            <div class="row">
                <div class="col">
                    <label for="inputProductPrice" class="form-label">Price (R$):</label>
                </div>
                <div class="col-sm-8">
                    <input type="number" class="form-control" placeholder="Price" aria-label="Price" id="inputProductPrice" step="0.01" min="1.0">
                </div>
            </div>

        </div>
        <div class="mb-3">

            <div class="row">
                <div class="col">
                    <label for="inputProductQuantityStock" class="form-label">Quantity of Stock:</label>
                </div>
                <div class="col-sm-8">
                    <input type="number" class="form-control" placeholder="Quantity of Stock" aria-label="Quantity of Stock" id="inputProductQuantityStock">
                </div>
            </div>

        </div>
    </div>
    <br />
    <div class="container border border-1 w-50 p-2">
        <input type="submit" class="form-control btn btn-danger" value="Save" />
    </div>
</form>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script language="javascript" type="text/javascript">
    $(document).ready(function () {

        $("#frmNewProduct").submit(function (event) {
            event.preventDefault();

            var json = {
                name: $("#inputProductName").val()?.trim() ?? null,
                description: $("#inputProductDescription").val()?.trim() ?? "",
                price: parseFloat($("#inputProductPrice").val()?? 0.0),
                quantityOfStock: parseInt($("#inputProductQuantityStock").val()?? 0)
            };

            alert(JSON.stringify(json))

            $.ajax({
                url: "/Product/New",
                method: "POST",
                contentType: "application/json",
                data: JSON.stringify(json),
                success: function (data) {
                    console.log(JSON.stringify(data));
                },
                error: function () {

                }
            });
        });
    });
</script>
